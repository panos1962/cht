#!/usr/bin/env bash

. "${PANDORA_BASEDIR:=/var/opt/pandora}/lib/pandora.sh"

usage_list="${pd_progname} carget [ OPTIONS ] [ ARGS ]
${pd_progname} carparse [ OPTIONS ] [ ARGS ]"

pd_usagemsg="[ --help ]

Or try one of the following:

${usage_list}"

[ -z "${CHT_BASEDIR}" ] &&
CHT_BASEDIR="/var/opt/cht"

[ $# -lt 1 ] &&
set -- "--help"

case "${1}" in
-h|--help)
	echo "${usage_list}"
	exit 0
	;;
-*)
	pd_usage
	;;
esac

component="${1}"
shift

program="${CHT_BASEDIR}/lib/govHUB/${component}"

pd_errlevel=0
[ ! -x "${program}" ] &&
echo "${pd_progname}: ${component}: unknown program" >&2 &&
exit 1

exec "${program}" "$@"
